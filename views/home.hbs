<section id="homepage" class="container">
    <main id="homepage-content">
        {{#each cards}}
            {{> card title=this.title image=this.image content=this.content links=this.links }}
        {{/each}}
    </main>
    <aside id="homepage-sidebar" class="sidebar">
        <div class="sidebar-items" id="github-projects">
            <h3 class="sidebar-items-heading">Recent projects</h3>
        </div>
        <div class="sidebar-items">
            <h3 class="sidebar-items-heading">Recent posts</h3>
            {{#if posts}}
                {{#each posts}}
                    <div class="sidebar-item">
                        <a href="/blog/post/{{ this.id }}"><h3>{{ this.title }}</h3></a>
                        <p>{{ this.description }}</p>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <div class="sidebar-items">
            <h3 class="sidebar-items-heading">Other links</h3>
            <div class="sidebar-item">
                <a href="/static/dusancv.pdf"><h3>CV</h3></a>
                <p>Take a look at my CV</p>
            </div>
            <div class="sidebar-item">
                <a href="https://github.com/dusnm/dusanmitrovic.xyz" target="_blank"><h3>Source code</h3></a>
                <p>Source code for this website</p>
            </div>
            <div class="sidebar-item">
                <a href="/static/pgp.txt"><h3>PGP key</h3></a>
                <p>336BE08803C45DCBB11A8BC7AAA0FF58D22E415F</p>
            </div>
        </div>
        <div class="sidebar-items">
            <h3 class="sidebar-items-heading">Licensing</h3>
            <div class="sidebar-item">
                <h3>Source Code</h3>
                <p>Licensed under <a href="https://opensource.org/licenses/GPL-3.0" target="_blank">GNU GPL v3</a> only.</p>
            </div>
            <div class="sidebar-item">
                <h3>Content</h3>
                <p>Licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank">CC-BY-SA</a>.</p>
            </div>
        </div>
    </aside>
</section>
